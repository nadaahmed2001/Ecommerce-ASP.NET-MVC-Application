@model Ecommerce.Models.User
@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-md-6">
            <div class="p-4" style="background-color: #6d36e4; border-radius: 8px; color: white; text-align: center;">
                <h1 class="my-h1">Your Profile</h1>
            </div>

            <div class="p-4 mt-3" style="background-color: #fff; border-radius: 8px; box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);">
                <form asp-action="UpdateProfile" asp-controller="Account" method="post">
@*                    <div asp-validation-summary="All" class="text-danger"></div>
*@
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="password" />
                    <input type="hidden" asp-for="Role" />

                    <div class="mb-3">
                        <label for="userName" class="form-label">Username:</label>
                        <input type="text" id="userName" name="userName" class="form-control" value="@Model.userName" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.email" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age:</label>
                        <input type="number" id="age" name="age" class="form-control" value="@Model.Age" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Role" class="form-label">User Type:</label>
                        <input type="text" id="Role" name="Role" class="form-control" value="@Model.Role" readonly />
                    </div>

                    <div style="text-align: center;">
                        <button type="submit" class="btn btn-primary" style="background-color:#6d36e4;">Update Profile</button>
                    </div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <p style="color: green; text-align: center;">@TempData["SuccessMessage"]</p>

                    }
                </form>
            </div>
        </div>
    </div>
</div>
